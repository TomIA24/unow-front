                  setLearningReason("personal");
                  setTwoOut(true);
                  await new Promise((resolve) => setTimeout(resolve, 1000));
                  setTwo(false);
                  setThree(true);
                }}
                className={`${styles.btn_choose} ${
                  otherUp ? styles.other_up : styles.other_down
                }`}
              >
                Personal
