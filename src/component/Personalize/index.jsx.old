                          setTwo(false);
                          setThree(true);
                        }
                      }}
                      className={styles.btn_choose}
                    >
                      <span className={styles.btn_choose_courses}>âœ”ï¸</span>{" "}
                    </button>
                  ) : (
                    ""
                  )}
                </div>
              ) : (
                ""
              )}
            </div>
          </div>
        </div>
      ) : (
